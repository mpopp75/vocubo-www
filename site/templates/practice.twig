{% extends "layout.twig" %}

{% block content %}
<p>{{ voc.baselang_long }} (ID: {{ voc.id }}): <span class="langoutput">{{ voc.word_base }}</span></p>

{% if voc.hints %}
<p><small>{{ voc.hints }}</small></p>
{% endif %}

<div id="question">
<input type="text" id="entry" size="30" autofocus><br>
<input type="hidden" id="id" value="{{ voc.id }}">
<button type="button" id="sbutton" onclick="sendAnswer({{ voc.id }})">Send</button>
</div>

<div id="chartoggle" onclick="toggleChars()">ÄŒ</div>
<div id="characters" style="display: block">{% include 'characters.twig' %}</div>

<div id="reply"></div>

<div id="log"></div>
{% endblock %}